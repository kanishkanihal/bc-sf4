<form method="post" action="{{ path('cms_block_delete', {'id': cms_block.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cms_block.id) }}">
    <button class="btn">Delete</button>
</form>
